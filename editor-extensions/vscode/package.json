{
  "name": "vscode-grain",
  "displayName": "Grain",
  "description": "Grain support for Visual Studio Code.",
  "version": "0.16.0",
  "publisher": "grain-lang",
  "keywords": [
    "grain",
    "grain-lang"
  ],
  "icon": "grain_shorthand_white.png",
  "engines": {
    "vscode": "^1.67.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/grain-lang/grain-language-server"
  },
  "bugs": {
    "url": "https://github.com/grain-lang/grain-language-server/issues"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:grain"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "commands": [
      {
        "command": "grain.restart",
        "title": "Grain: Restart Language Server"
      }
    ],
    "languages": [
      {
        "id": "grain",
        "aliases": [
          "Grain",
          "grain"
        ],
        "extensions": [
          ".gr"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "grain-type",
        "aliases": [
          "Grain Type"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "grain",
        "scopeName": "source.grain",
        "path": "./syntaxes/grain.json"
      },
      {
        "language": "grain-type",
        "scopeName": "source.grain-type",
        "path": "./syntaxes/grain-type.json"
      }
    ],
    "configurationDefaults": {
      "[grain]": {
        "files.insertFinalNewline": true
      }
    },
    "configuration": {
      "type": "object",
      "title": "Grain Language Server configuration",
      "properties": {
        "grain.enableLSP": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "description": "Enable the language server"
        },
        "grain.enableStatementLenses": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "description": "Enable per-statement lenses"
        },
        "grain.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "grain.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "grain.cliPath": {
          "scope": "window",
          "type": "string",
          "default": "grain",
          "description": "Path to the grain cli"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -b && node syntaxes/generate-grain-type.js",
    "watch": "tsc -b -w",
    "test": "sh ./scripts/e2e.sh",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "test-compile": "tsc -p ./",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "deploy": "vsce publish && ovsx publish"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.12.0",
    "@types/vscode": "1.67.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.16.0",
    "mocha": "^9.1.2",
    "ovsx": "^0.3.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4",
    "vsce": "^2.8.0"
  },
  "__metadata": {
    "id": "b95eb54f-dbaf-4bb5-a18c-8b56da8a0829",
    "publisherDisplayName": "The Grain Programming Language",
    "publisherId": "28fcb3bd-39d4-48a2-9e5b-115ceb2c067b"
  }
}
