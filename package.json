{
    "name": "vscode-grain",
    "displayName": "Grain",
    "description": "Grain support for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "grain-lang",
    "keywords": ["grain", "grain-lang"],
    "icon": "grain_shorthand_white.png",
    "engines": {
        "vscode": "^1.19.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/grain-lang/vscode-grain"
    },
    "bugs": {
        "url": "https://github.com/grain-lang/vscode-grain/issues"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "grain",
            "aliases": ["Grain", "grain"],
            "extensions": [".gr"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "grain",
            "scopeName": "source.grain",
            "path": "./syntaxes/grain.json"
        }]
    }
}
